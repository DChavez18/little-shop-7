
<nav class="navbar">
  <h3 class="navbar-header">Admin Dashboard</h3>
  <ul class="navbar-directories">
    <li><%= link_to 'Dashboard', admin_dashboard_index_path %></li>
    <li><%= link_to 'Merchants', admin_merchants_path %></li>
    <li><%= link_to 'Invoices', admin_invoices_path %></li>
  </ul>
</nav>

<div>
 <div>
  <h3>Customer Transactions</h3>
  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Number of Transactions</th>
    </tr>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.first_name %></td>
        <td><%= result.last_name %></td>
        <td><%= result.number_of_transactions %></td>
        <td><%= result.list_transactions_results %></td>
      </tr>
    <% end %>
  </table>
</div>
</div>



<div>
  <h3>Incomplete Invoices</h3>
  <ul>
    <% @invoices.each do |i| %>
      <% if i.status == "in progress" %>
        <li><%= link_to "Invoice # #{i.id}", admin_invoice_path(i.id) %> - <%= i.created_at.strftime("%A, %B %d, %Y") %></li>
      <% end %>
    <% end %>
  </ul>
</div>
