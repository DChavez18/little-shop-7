<h1>Little Esty Shop</h1>

<p><%= @merchant.name %></p>

<%= form_with model: [@merchant, @item] do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :unit_price %>
    <%= f.number_field :unit_price %>
  </div>

  <%= f.submit "Submit" %>
<% end %>