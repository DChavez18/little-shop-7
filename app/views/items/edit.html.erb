<h1>Edit Item</h1>

<%= form_with(model: [@merchant, @item], local: true) do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, value: @item.name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, value: @item.description %>
  </p>

  <p>
    <%= form.label :unit_price %><br>
    <%= form.number_field :unit_price, value: @item.unit_price %>
  </p>

  <p>
    <%= form.submit 'Update Item' %>
  </p>
<% end %>

<%= link_to 'Back to Item', merchant_item_path(@merchant, @item) %>